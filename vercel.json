{
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^/admin/?$",
      "dest": "/api/admin"
    },
    {
      "src": "^/admin/(.*)$",
      "dest": "/api/admin"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "/index.html"
    }
  ]
}
